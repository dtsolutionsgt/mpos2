UPDATE D_FACTURAP SET ANULADO = '0' WHERE ANULADO = 'N'
UPDATE D_FACTURAP SET ANULADO = '1' WHERE ANULADO = 'S'

UPDATE D_FACTURAP SET DEPOS  = '0' WHERE DEPOS = 'N'
UPDATE D_FACTURAP SET DEPOS  = '1' WHERE DEPOS = 'S'
		
UPDATE D_FACTURAD SET  ANULADO = '0' WHERE ANULADO = 'N'
UPDATE D_FACTURAD SET  ANULADO = '1' WHERE ANULADO = 'S'
		
UPDATE D_FACTURA SET ANULADO = '0' WHERE ANULADO = 'N'
UPDATE D_FACTURA SET ANULADO = '1' WHERE ANULADO = 'S'

UPDATE D_FACTURA SET CALCOBJ = '0' WHERE CALCOBJ = 'N'
UPDATE D_FACTURA SET CALCOBJ = '1' WHERE CALCOBJ = 'S'

UPDATE D_FACTURA SET DEPOS = '0' WHERE DEPOS = 'N'		
UPDATE D_FACTURA SET DEPOS = '1' WHERE DEPOS = 'S'		
		
UPDATE D_DEPOSD	 SET CHEQUE = '0' WHERE CHEQUE = 'N'	
UPDATE D_DEPOSD	 SET CHEQUE = '1' WHERE CHEQUE = 'S'	
		
UPDATE D_DEPOS SET ANULADO = '0' WHERE ANULADO = 'N'
UPDATE D_DEPOS SET ANULADO = '1' WHERE ANULADO = 'S'
		
UPDATE D_BONIF SET ANULADO = '0' WHERE ANULADO = 'N'
UPDATE D_BONIF SET ANULADO = '1' WHERE ANULADO = 'S'

ALTER TABLE D_FACTURAP
ALTER COLUMN ANULADO BIT NOT NULL;

